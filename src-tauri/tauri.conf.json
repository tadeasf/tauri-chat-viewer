{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build-react",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:5009",
    "distDir": "../build"
  },
  "package": {
    "productName": "Chat Viewer",
    "version": "1.0"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": false
      }
    },
    "bundle": {
      "active": true,
      "category": "SocialNetworking",
      "copyright": "Tadeáš Fořt",
      "publisher": "Tadeáš Fořt",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/icon.png", "icons/icon.icns", "icons/icon.ico"],
      "identifier": "com.tadeas.chat.viewer.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": "Tadeáš Fořt",
        "signingIdentity": null,
        "license": "LICENSE"
      },
      "shortDescription": "Simple app for viewing chat history made by Tadeáš Fořt",
      "targets": "dmg"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Chat Viewer",
        "fullscreen": false,
        "maximizable": true,
        "resizable": true,
        "center": true,
        "fileDropEnabled": true,
        "transparent": true,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "tabbingIdentifier": "chat-viewer",
        "height": 1200,
        "width": 1600,
        "minHeight": 600,
        "minWidth": 800
      }
    ]
  }
}
