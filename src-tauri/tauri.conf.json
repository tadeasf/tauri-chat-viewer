{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },

  "package": {
    "productName": "Kocouřátčí Messenger",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "category": "SocialNetworking",
      "copyright": "Tadeáš Fořt",
      "publisher": "Tadeáš Fořt",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.kocouratci.messenger.viewer.dev",
      "longDescription": "Simple app for viewing chat history made by Tadeáš Fořt. It uses React and sass in order to create a simple UI. This UI then shows information provided by a remote express backend. The backend is connected to a MongoDB database which stores the chat history. You can upload .json message files in bulk to the backend which then correctly decodes them and saves them to mongodb.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "license": "./../LICENSE"
      },
      "resources": [],
      "shortDescription": "Simple app for viewing chat history made by Tadeáš Fořt",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Kocouřátčí Messenger",
        "fullscreen": false,
        "maximizable": true,
        "resizable": true,
        "center": true,
        "fileDropEnabled": true,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "tabbingIdentifier": "kocouratci-messenger",
        "height": 1200,
        "width": 1600,
        "minHeight": 600,
        "minWidth": 800
      }
    ]
  }
}
